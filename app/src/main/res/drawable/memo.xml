<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 테두리 -->
    <item android:top="1dp"
        android:right="1dp"
        android:left="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 상자 내부는 투명색 -->
            <stroke
                android:width="1dp"
                android:color="@android:color/black" /> <!-- 테두리는 검정색 -->
        </shape>
    </item>

</layer-list>
