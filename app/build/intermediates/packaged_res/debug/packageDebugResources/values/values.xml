<?xml version="1.0" encoding="utf-8"?>
<resources>
    <array name="colors">
        <item>#ff0000</item>
        <item>#ffbe0a</item>
        <item>#288c28</item>
        <item>#0064ff</item>
        <item>#9905d3</item>
        <item>#fc5404</item>
        <item>#faed27</item>
        <item>#2fff00</item>
        <item>#55ffff</item>
        <item>#ff00ff</item>
    </array>
    <color name="BLACK">#000000</color>
    <color name="WHITE">#FFFFFF</color>
    <color name="colorDefault">#00000000</color>
    <color name="colorSelected">#DCDCDC</color>
    <string name="app_name">Diary</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimaryDark">#FAEBD7</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        
        <item name="colorPrimaryDark">#FAEBD7</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">#000000</item>
    </style>
    <style name="Base.Theme.Diary" parent="Theme.AppCompat.Light.NoActionBar">
        
        
        <item name="colorPrimaryDark">#FAEBD7</item>
    </style>
    <style name="CustomDatePickerDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="CustomDatePickerDialogButtonStyle.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:background">#000000</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DarkDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">#000000</item> 
    </style>
    <style name="DarkSpinnerDatePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerDark</item>
        <item name="android:buttonBarStyle">@style/CustomDatePickerDialogButtonStyle.Dark</item> 
    </style>
    <style name="DarkTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#000000</item>
        <item name="android:headerBackground">#000000</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="LightDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">#FFFFFF</item> 
    </style>
    <style name="LightTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#FFFFFF</item>
        <item name="android:headerBackground">#ffffff</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        
        <item name="colorControlNormal">@android:color/black</item>
    </style>
    <style name="SpinnerDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="SpinnerDatePickerDark" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#000000</item>
    </style>
    <style name="SpinnerDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
        <item name="android:buttonBarStyle">@style/CustomDatePickerDialogButtonStyle</item> 
    </style>
    <style name="Theme.Diary" parent="Base.Theme.Diary"/>
</resources>